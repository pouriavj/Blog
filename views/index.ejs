<%-include ("partials/header.ejs") %> <% if(locals.allPosts) {%>
<%if(allPosts[allPosts.length-1]){%> <% var limitedEssay =
allPosts[allPosts.length-1].essay.slice(0,150) %>
<!-- Hero -->
<section class="container">
  <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
      <h1 class="display-4 fst-italic features">
        <%= allPosts[allPosts.length-1].title %>
      </h1>
      <p class="lead my-3"><%= limitedEssay %>...</p>
      <p class="lead mb-0">
        <a href="#lastPost" class="text-body-emphasis fw-bold link-secondary"
          >Continue reading...</a
        >
      </p>
    </div>
  </div>
</section>
<% } %>

<!-- Posts -->
<section class="container">
  <div class="row">
    <div class="col-8">
      <br />
      <div>
        <h2 class="posts pb-4 mb-4 fst-italic border-bottom">Blog posts</h2>
      </div>
      <div>
        <% for(let i = 0 ; i < allPosts.length ; i++) {%>
          <% if ( i == allPosts.length-1){%>
            <h2 id="lastPost" class="title"><%= allPosts[i].title %></h2>
          <%} else {%>
            <h2 class="title"><%= allPosts[i].title %></h2>
          <%}%>  



        
        <h3 class="date"><%= date %></h3>
        <br />
        <p class="blogPost"><%= allPosts[i].essay %></p>
        
        <br />
        <%} %>
      </div>
    </div>
    <div class="col-4">
